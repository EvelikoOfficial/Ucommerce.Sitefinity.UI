@using System.Web.Mvc
@using System.Web.Mvc.Html
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using Telerik.Sitefinity.Modules.Pages;
@using Telerik.Sitefinity.UI.MVC;
@using Telerik.Sitefinity.Services;

@{
    Layout = null;
}

@Html.StyleSheet(Url.WidgetContent("assets/dist/css/main.min.css"), "head")

@if (!SystemManager.IsDesignMode)
{
    @Html.Script(Url.WidgetContent("assets/build/js/vendor.bundle.js"), "bottom", false)
    @Html.Script(Url.WidgetContent("assets/build/js/main.js"), "bottom", false)
}

<div class="container my-4" data-component="shipping-widget" id="shipping-method">
    <div class="row">
        <div class="col-md-6">
            <h3>@Html.Resource("ShippingMethod", "UcommerceResources")</h3>
            <hr />
        </div>
    </div>
    <template v-if="model">
        <template v-if="model.AvailableShippingMethods.length">
            <template v-for="method in model.AvailableShippingMethods" :model="model">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="js-shipping-picker" name="SelectedShippingMethodId" type="radio" :value="method.Value" :checked="method.Value == model.SelectedShippingMethodId"> {{ method.Text }}
                            </label>
                        </div>
                    </div>
                </div>
            </template>
            <checkout-navigation v-bind:model="model"
                                 continue-label="@Html.Resource("ContinueToNextStep", "UcommerceResources")"
                                 back-label="@Html.Resource("BackButton", "UcommerceResources")"
                                 mode="Bootstrap4"
                                 :continue-fn="submit" 
                                 back-link-classes="btn btn-light btn-lg float-md-left"
                                 continue-btn-classes="btn btn-info btn-lg w-100 mt-3 mt-md-0 float-md-right"
                                 classes="row my-4">
            </checkout-navigation>
        </template>
        <template v-else>
            <p class="alert alert-danger">
                WARNING: No shipping methods have been configured for {{ model.ShippingCountry }} within <a href="http://ucommerce.dk">UCommerce</a> administration area.
            </p>
        </template>
    </template>
</div>
